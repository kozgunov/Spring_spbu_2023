  #include <iostream>

using namespace std;


int summing(int list1[], int list2[]);

int main()
{
	int list1[3]; // init. of arrays (they're less than 3 in initial conditions)
	int list2[3];

	for (int i = 0; i < sizeof(list1) or i < sizeof(list2); i++) //fulling of arrays 
	{
		cout << "write" << i << "element of 1st array";
		cin >> list1[i];
		cout << "write" << i << "element of 2nd array";
		cin >> list2[i];
	}

	summing(list1, list2);
}

int summing(int list1[], int list2[])
{
	int size_of_answer = (sizeof(list1) + sizeof(list2)); //full answer and support vars
	int *answer = new int [size_of_answer];
	int appendd;

	for (int i = 0; i < (sizeof(list1) + sizeof(list2)); i++) // "for" for computing the one element - smallest one
	{
		if (sizeof(list1) > sizeof(list1)) //for excluding outgoing of range of "for"
			i = i % sizeof(list1);
		else
			i = i % sizeof(list2);

		for (int j = 0; j < (sizeof(list1) + sizeof(list2)); j++) // computing of the smallest one (imply, that list1 & list2 are sorted)
		{
			appendd = 100;
			if (sizeof(list1) > sizeof(list1))
				i = i % sizeof(list1);
			else
				i = i % sizeof(list2);

			if (list1[j] <= list2[j]) // checking the last element of lists
			{
				if (appendd > list1[j])
				{
					appendd = list1[j];
					for (int ii = 0; ii < sizeof(list1) - 1; ii++) // deleting the last ones
						list1[ii + 1] = list1[ii];
				}
			}
			else
			{
				if (appendd > list2[j]) // or the 2nd list
				{
					appendd = list2[j];
					for (int ii = 0; ii < sizeof(list2) - 1; ii++) 
						list1[ii + 1] = list1[ii];
				}
			}
		}
	answer[i] = appendd;
	}
}

  
  
